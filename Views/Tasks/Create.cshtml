@model MyTask.Models.Task

@{
    ViewData["Title"] = "Create";
}


<body>
    <div class="user">
<h4>Add new task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control create" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="button" />
            </div>
            <div>
                <a asp-action="Index" onclick="history.back()"  class="button">Cancel</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    </div>
</body>